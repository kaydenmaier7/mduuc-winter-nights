<div class="users session">
	<h1>Login Here!</h1>

	<%= form_for :session, url: sessions_path do |f| %>

		<% if @errors %>
			<ul>
				<% @errors.each do |error| %>
					<li>
						<%= error %>
					</li>
				<% end %>
			</ul>
		<% end %>

		<p class="users-new">
			<%= f.label :Email %> <br>
			<%= f.text_field :email %>
		</p>

		<p class="users-new">
			<%= f.label :Password %> <br>
			<%= f.password_field :password %>
		</p>

		<p>
			<%= f.submit 'Login' %>
		</p>

	<% end %> 
</div>		