<%= form_for @event do |f| %>
  <% if @event.errors.any? %>

  <div id="error_explanation">
    <h2>
      <%= pluralize(@event.errors.count, 'error') %> prohibited this event from being saved:
    </h2>

    <ul>
      <% @event.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
      <% end %>
    </ul>

  </div>

  <% end %>

  <p>
    <%= f.label :event_type, 'Event Type'  %>
    <%= f.select :event_type, ['Laundry', 'Weekday Breakfast', 'Weekday Dinner', 'Weekend Breakfast', 'Weekend Lunch', 'Weekend Dinner', 'Daily Clean Up', 'Setup, Breakdown', 'Sleep Overs']%>

  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>


  <p>
    <%= f.label :max_volunteers, 'Max Volunteer Count' %>
    <%= f.text_field :max_volunteers %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>